@model IEnumerable<footballnet.Models.Player>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GamesPlayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GamesPlayedInMainTeam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YellowCards)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RedCards)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinutesPlayed)
            </th>            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GamesPlayed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GamesPlayedInMainTeam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goals)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YellowCards)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RedCards)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinutesPlayed)
            </td>            
        </tr>
}
    </tbody>
</table>
