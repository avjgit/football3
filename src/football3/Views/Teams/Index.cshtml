@model IEnumerable<footballnet.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WinsDuringMainTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WinsDuringAddedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LossesDuringAddedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LossesDuringMainTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoalsWon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PenaltyGoals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoalsLost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Forwards)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Defendors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goalkeepers)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinsDuringMainTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinsDuringAddedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LossesDuringAddedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LossesDuringMainTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoalsWon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PenaltyGoals)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoalsLost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Forwards)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Defendors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goalkeepers)
            </td>
        </tr>
}
    </tbody>
</table>
